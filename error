private static void extractText(String text, String value, Map<String, List<PdfMetaData>> metadata, int page) {
    Pattern pattern = Pattern.compile("(?i)" + Pattern.quote(value) + "\\s*[:\\-]?\\s*([A-Z0-9'\\-\\. ]+?)(?=\\s{2,}|\\n|$)");
    Matcher matcher = pattern.matcher(text);
    while (matcher.find()) {
        String extracted = matcher.group(1).trim();
        System.out.println("Extracted: " + extracted); // Optional debug
        addToMetadataList(metadata, extracted, page);
    }
}
