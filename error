private void logProcessOutputAsync(InputStream inputStream) {
        new Thread(() -> {
            try (BufferedReader reader = new BufferedReader(new InputStreamReader(inputStream))) {
                String line;
                while ((line = reader.readLine()) != null) {
                    log.debug("[OCR] " + line);
                }
            } catch (IOException e) {
                log.error("Error reading OCR process output", e);
            }
        }).start();
    }
